<div class="pagenav">
  <%= link_to 'New State', new_state_path %>
</div>

<h1>Listing states</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short name</th>
    <th></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%= state.name %></td>
    <td><%= state.short_name %></td>
    <td><%= link_to 'Edit', edit_state_path(state) %></td>
    <td><%= link_to 'Destroy', state, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

