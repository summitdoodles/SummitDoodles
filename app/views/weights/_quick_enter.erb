    <%= f.date_select :date, :order => [:day, :month, :year], :use_short_month=>true %>
 
    <%= f.label :lb %>:
    <%= f.text_field :lb, :size=>3 %>
 
    <%= f.label :oz %>:
    <%= f.text_field :oz, :size=>2 %>
    <%= f.submit %>
  </div>
<% end %>
